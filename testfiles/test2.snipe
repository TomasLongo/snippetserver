filepath.Walk(snippetFolder, func(path string, f os.FileInfo, err error) error {
    if !f.IsDir() && strings.HasSuffix(path, ".snipe") {
        file, e := os.Open(path)
        defer file.Close()
        if e != nil {
            panic(e)
        }
        snippets = append(snippets, GetSnippetsFromFile(file, languageFilter(*language))...)
    }
    return nil
})